# .editorconfig for Blucream.Common
root = true

[*.cs]
# C# files

# Indentation and spacing
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Newline preferences
csharp_new_line_before_open_brace = none
csharp_new_line_between_query_expression_clauses = false
csharp_new_line_before_members_in_object_initializers = false
csharp_new_line_before_members_in_anonymous_types = false
csharp_new_line_between_method_declaration_parameters = false
csharp_new_line_between_method_call_parameters = false
csharp_new_line_between_type_declaration_members = false
csharp_new_line_before_finally = true
csharp_new_line_before_else = true
csharp_new_line_before_catch = true

# Variable and function ordering (StyleCop)
dotnet_diagnostic.SA1201.severity = warning
# SA1201: Elements should appear in the correct order (fields before methods)

# Optional: Fewer blank lines
csharp_preserve_single_line_statements = true

# StyleCop: Place fields before methods
# (Requires StyleCop.Analyzers NuGet package)
# If not using StyleCop, consider adding it for this rule enforcement. 